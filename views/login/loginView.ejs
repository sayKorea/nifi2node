<!DOCTYPE html>
<html lang="en">

<head>
	<title>Interface Login</title>
	<meta charset="UTF-8">
	<link rel="stylesheet" type="text/css" href="/stylesheets/login/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/login/util.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/login/main.css">
	<script src="\javascripts\jquery\jquery.3.4.1.min.js" type="text/javascript"></script>
	<script src="\javascripts\login\animsition.min.js" type="text/javascript"></script>
	<script type="text/javascript">
		window.dataLayer = window.dataLayer || [];
		function gtag() { dataLayer.push(arguments); }
		gtag('js', new Date());
		gtag('config', 'UA-23581568-13');

		$(function(){

			$("#login").click(function(){
				var userid = $("#userid").val();
				var password = $("#password").val();

				if(!userid || userid == ""){
					alert("사용자를 입력 하세요");
					$("#userid").focus();
					return;
				}

				if(!password || password == ""){
					alert("패스워드를 입력 하세요");
					$("#password").focus();
					return;
				}

				$.ajax({
					url       : "/login",
					type      : "GET",
          			cache     : false,
					dataType  : "json",
					data      : $("#fm01").serialize(),
					success: function(data) {
						var cnt = data[0].CNT;
						if(cnt == 0){
							alert("로그인 실패");
							return;
						}else if(cnt == 1){
							alert("로그인 성공");
						}else{
							alert("에러~~~");
							return;
						}
					}
				});
			});
			$("#join").click(function(){
				alert("가입");
			});
		});
	</script>
</head>
<body>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
				<form id="fm01" class="login100-form validate-form flex-sb flex-w">
					<span class="login100-form-title p-b-32"> 연계 로그인 </span>
					<span class="txt1 p-b-11"> 사용자ID </span>
					<div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
						<input class="input100" type="text" name="userid" id="userid">
						<span class="focus-input100"></span>
					</div>
					<span class="txt1 p-b-11"> 패스워드 </span>
					<div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
						<span class="btn-show-pass"></span>
						<input class="input100" type="password" name="password" id="password">
						<span class="focus-input100"></span>
					</div>
					<div class="container-login100-form-btn">
						<button id="login" type="button" class="login100-form-btn"> 로그인 </button>
						<button id="join" type="button" class="login101-form-btn"> 가입 </button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- <div id="dropDownSelect1"></div> -->
</body>
</html>